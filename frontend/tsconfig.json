{
  "compilerOptions": {
    "isolatedModules": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowJs": true,
    "jsx": "preserve",
    "types": [
      "vite/client",
    ],
    "lib": [
      "ESNext",
      "DOM"
    ],
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue"]
}